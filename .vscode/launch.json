{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch addon",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "addonPath": "${workspaceFolder}\\extension",
            "log": {
                "consoleLevel": {
                    "default": "Error"
                }
            },
            "pathMappings": [
                {
                    "url": "moz-extension:///src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        }
    ]
}